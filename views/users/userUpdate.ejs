<%- include('../partials/head') %>
<body>
    <%- include('../partials/nav') %>
    <div class="flex horz main_all">
        <div class="flex column main__leftColumn_all main__columnGeneral_all">
        </div>
        <div class="flex column main__centerColumn_all"> 
            <div class="flex column formContainer_all mx-4">
                <form class="needs-validation flex column" action="/user/<%= currentUser._id %>?_method=PUT" method="POST" novalidate>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Profile Image</span>
                            <input class="form-control" type="text" maxlength="700" name="userImg" id="userImg" placeholder="ImageUrl" required>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Username</span>
                            <input class="form-control" type="text" maxlength="700" 
                            name="username" id="username" value="<%= currentUser.username %>" placeholder="Captain_Destructor" required>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Password</span>
                            <input class="form-control" type="text" maxlength="36"
                             name="password" id="password" value="" placeholder="password">
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Bio</span>
                            <textarea class="form-control" id="bio" name="bio" placeholder="I'm.." rows="3"><%= currentUser.bio %></textarea>
                        </div>
                        <button class="btn btn-warning mt-3 mx-auto postButton">Update User</button>
                </form>
            </div>
        </div>
        <div class="flex column main__rightColumn_all outsideColumnGeneral_all">

        </div>
    </div>
<%- include('../partials/validator') %>
</body>
</html>